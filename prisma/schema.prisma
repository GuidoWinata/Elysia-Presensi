generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Level {
  SISWA
  GURU
}

enum Status {
  HADIR
  IZIN
  ALPHA
  TELAT
  PULANG
}


model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  token       String?
  siswaId     Int?
  kelasId     Int
  siswa       Siswa?     @relation(fields: [siswaId], references: [id])
  kelas       Kelas     @relation(fields: [kelasId], references: [id])
}

model Kelas {
  id         Int   @id @default(autoincrement())
  nama       String
  User       User[]
  Siswa      Siswa[]
}


model Siswa {
  id          Int           @id @default(autoincrement())
  nisn        Int
  nama        String
  kelasId     Int
  kelas       Kelas         @relation(fields: [kelasId], references: [id])
  kehadiran   Kehadiran[]
  user        User[]
}


model Kehadiran {
  id            Int         @id @default(autoincrement())
  tanggal       DateTime?    
  wktdatang     String?
  wktpulang     String?
  status        Status
  siswaId       Int
  siswa         Siswa       @relation(fields: [siswaId], references: [id])
}
